        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Image Source="../Resources/map1.JPG"></Image>
            <ItemsControl ItemsSource="{Binding MeasuringPoints}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding Model.Position.XPosition}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Model.Position.YPosition}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Height="20" Width="20" Stroke="Black" Fill="{Binding JustMeasured, Converter={krachConnect:JustMeasuredToBrushConverter}}" StrokeThickness="{Binding IsSelected, Converter={krachConnect:BoolToStrokeThicknessConverter}}" ></Ellipse>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
